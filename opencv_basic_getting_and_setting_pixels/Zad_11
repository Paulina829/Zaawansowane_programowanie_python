import cv2
import numpy as np

path = r"C:\Users\pauli\Desktop\Zaawansowane_programowanie_python\kot-bombajski.jpg"
image = cv2.imread(path)

if image is None:
    print("âŒ Nie udaÅ‚o siÄ™ wczytaÄ‡ obrazu.")
else:
    # Konwersja do skali szaroÅ›ci
    gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)

    # Szukamy najwiÄ™kszej jasnoÅ›ci
    minVal, maxVal, minLoc, maxLoc = cv2.minMaxLoc(gray)

    print(f"ğŸŒŸ NajjaÅ›niejszy piksel: wspÃ³Å‚rzÄ™dne {maxLoc}, wartoÅ›Ä‡ jasnoÅ›ci: {maxVal}")

    # PodÅ›wietlenie piksela (na czerwono)
    highlighted = image.copy()
    cv2.circle(highlighted, maxLoc, 5, (0, 0, 255), 2)

    cv2.imshow("NajjaÅ›niejszy piksel", highlighted)
    cv2.waitKey(0)
    cv2.destroyAllWindows()
